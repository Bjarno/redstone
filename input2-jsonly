/* @server */ 
{
  function broadcast(name, message) {
      displayMessage(name, message);
  }
}
    
/* @client */
  {
    var name = "user"  + Math.random(),
        btn  = $("#btn"),
        text = $("#text");

    function chatHandler () {
       var msg = text.val();
       broadcast(name, msg);
    }
    btn.click(chatHandler);
    function displayMessage(name, message) {
        text.val(name + ":said " + message)
    }
}