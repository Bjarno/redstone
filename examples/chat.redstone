var messages = [];

/* @client */
{
	var name     = "user" + (Math.floor(Math.random() * 9901) + 100),
		msg      = "";

	function chat() {
		messages.push({name: name, message: msg});
		msg = "";
	}
}

/* @ui */
body
	{{#each messages}}
		p {{name + " says: " + message}}
	input[value={{name}}]
	input[value={{msg}}][placeholder=Message]
	button[@click=chat]#send Send